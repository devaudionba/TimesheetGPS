<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="TimesheetGPS.View.AddLocationView"
             Title="Add Location">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name" VerticalOptions="Center" HorizontalOptions="Center" />
            <Entry Placeholder="Give your location a descriptive name" Text="{Binding Name}" />
            <Button Text="Add" Clicked="Button_ClickedAsync" />
            <maps:Map IsShowingUser="True" VerticalOptions="FillAndExpand" x:Name="myMap" MapType="Street"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>